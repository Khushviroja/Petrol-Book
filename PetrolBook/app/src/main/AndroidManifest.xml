<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petrolbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fuel_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fuel_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetrolBook">
        <activity android:name=".Admin" android:label="Admin" android:screenOrientation="landscape"></activity>
        <activity android:name=".Driver" android:label="Driver"/>
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>